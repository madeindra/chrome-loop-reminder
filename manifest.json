{
  "manifest_version": 2,
  "name": "Loop Reminder",
  "version": "1.0.0",
  "description": "Create your own reminder that will remind you repeatedly. Useful for starting a new habit.",
  "permissions": [ "notifications", "storage" ],
  "browser_action": {
    "default_icon": {
       "19": "icons/19.png",
       "38": "icons/38.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
